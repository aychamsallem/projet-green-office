<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container-fluid">

<header>
    <%- include('../partials/header'); %>
</header>

<main>

    <div style ='background-color: #edf2f4; padding: 2%;' class="container ">
    <%- include('../partials/addAnimal'); %>


    </div>


</main>

<div style = "margin-top: 5%;" class="container">
    <h4>animals list</h4>
    <div class="row">
    <% animals.forEach((elem,i)=>{ %>
        
        <div class="col-md-4">
            <div class="card" style="width: 18rem;">
                <img src=<%= elem.url %> class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"> <strong>TYPE:</strong><%= elem.type %></h5>
                  <p class="card-text">  <strong>NOM:</strong><%= elem.nom %></p>
                  <a href="/del/<%=i %>" class="btn btn-danger">DELETE</a>
                  <a href="/edit/<%=i %>" class="btn btn-info">EDIT</a>
                </div>
              </div>

        </div>
    

        <%})%>


      
    </div>
</div>

</body>
</html>